<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions xmlns="http://schemas.microsoft.com/build/2009/properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <Rule Name="QtConfigurationGeneral" DisplayName="Qt" PageTemplate="generic" Description="Qt" Order="300" xmlns="http://schemas.microsoft.com/build/2009/properties">
    <Rule.Categories>
      <Category Name="General" DisplayName="General" Description="General"/>
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" Label="" />
    </Rule.DataSource>

    <StringProperty Subtype="file" Name="QTDIR" DisplayName="Qt Installation Directory" Default="$(QTDIR)" Category="General" />
    <StringListProperty Name="QtLib" DisplayName="Qt Lib" Description="Specifies Qt library you are using." Separator=";" Default="Core" Category="General" />
    <BoolProperty Name="QtMocSingleFileMode" DisplayName="Qt Moc Single File Mode" Description="Make all moc file compile at once." Category="General" />
    <StringProperty Subtype="file" Name="QtMocSingleFileName" DisplayName="Qt Moc Single File Name" Description="Specifies a file name that includes all moc files." Default="gen\mocall_$(ProjectName)$(DefaultLanguageSourceExtension)" Category="General" />
    <StringProperty Subtype="file" Name="QtQrcIncludeFileName" DisplayName="Qt Qrc Include File Name" Description="Specifies a file name that includes all qrc included files." Default="gen\qrc_include_$(ProjectName).qrc" Category="General" />
  </Rule>

  <Rule Name="QtUicOptions" PageTemplate="generic" DisplayName="Qt Uic" Order="301">
    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="QtUic" />
    </Rule.DataSource>

    <StringProperty Subtype="file"
                Name="GeneratedFile"
                DisplayName="Generated file"
                Description="The file generated by the Qt Uic compiler"
                Category="General">
    </StringProperty>
  </Rule>

  <ItemType Name="QtUic" DisplayName="Qt Uic" />
  <ContentType Name="QtUicFile" DisplayName="Qt UI file" ItemType="QtUic" />
  <FileExtension Name=".ui" ContentType="QtUicFile" />

  <Rule Name="QtQrc" PageTemplate="tool" DisplayName="Qt Qrc" Order="302">
    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
      <Category Name="Command Line" DisplayName="Command Line" Subtype="CommandLine" />
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="QtQrc" />
    </Rule.DataSource>

    <StringProperty
      Name="Inputs"
      Category="Command Line"
      IsRequired="true">
      <StringProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="QtQrc"
          SourceType="Item" />
      </StringProperty.DataSource>
    </StringProperty>

    <StringProperty
      Subtype="file"
      Name="OutputFile"
      DisplayName="Output file"
      Description="Write output to file  (-o file)"
      Category="General"
      Switch="-o &quot;[value]&quot;" />
    <StringProperty
      Name="InitializationFunctionName"
      DisplayName="Initialization function name"
      Description="Create an external initialization function with name  (-name name)"
      Category="General"
      Switch="-name &quot;[value]&quot;" />
    <IntProperty
      Name="CompressThreshold"
      DisplayName="Compress threshold"
      Description="threshold to consider compressing files  (-threshold level)"
      MaxValue="100"
      MinValue="0"
      Category="General"
      Switch="-threshold &quot;[value]&quot;" />
    <IntProperty
      Name="CompressLevel"
      DisplayName="Compress level"
      Description="Compress input files by level  (-compress level)"
      MaxValue="9"
      MinValue="-1"
      Category="General"
      Switch="-compress &quot;[value]&quot;" />
    <StringProperty
      Name="RootPath"
      DisplayName="Root path"
      Description="Prefix resource access path with root path  (-root path)"
      Category="General"
      Switch="-root &quot;[value]&quot;" />
    <BoolProperty
      Name="NoCompress"
      DisplayName="No compress"
      Description="disable all compression  (-no-compress)"
      Category="General"
      Switch="-no-compress" />
    <BoolProperty
      Name="Binary"
      DisplayName="Binary"
      Description="Output a binary file for use as a dynamic resource  (-binary)"
      Category="General"
      Switch="-binary" />
    <BoolProperty
      Name="Namespace"
      DisplayName="Namespace"
      Description="Turn off namespace macros  (-namespace)"
      Category="General"
      Switch="-namespace" />
    <StringProperty
      Name="CommandLineTemplate"
      DisplayName="Command Line"
      Visible="False"
      IncludeInCommandLine="False" />
    <StringProperty
      Subtype="AdditionalOptions"
      Name="AdditionalOptions"
      Category="Command Line"
      DisplayName="Additional Options"
      Description="Additional Options" />
    <StringProperty
      Name="ExecutionDescription"
      DisplayName="Execution Description"
      IncludeInCommandLine="False"
      Visible="False" />
  </Rule>

  <Rule Name="QtMoc" PageTemplate="tool" DisplayName="Qt Moc" Order="302">
    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
      <Category Name="Command Line" DisplayName="Command Line" Subtype="CommandLine" />
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClInclude" Label="" HasConfigurationCondition="false" />
    </Rule.DataSource>

    <StringProperty
      Subtype="file"
      Name="OutputFile"
      DisplayName="Output file"
      Description="Write output to file  (-o file)"
      Category="General"
      Switch="-o &quot;[value]&quot;" />
    <StringListProperty
      Name="IncludePaths"
      DisplayName="Include Paths"
      Description="add dir to the include path for header files (-I[path])"
      Switch="-I&quot;[value]&quot;" />
    <BoolProperty
      Name="DryRun"
      DisplayName="Dry Run"
      Description="preprocess only; do not generate meta object code (-E)"
      Switch="-E" />
    <StringListProperty
      Name="PreprocessorDefinitions"
      DisplayName="Preprocessor Definitions"
      Description="define macro, with optional definition (-D[macro][=def])"
      Switch="-D&quot;[value]&quot;" />
    <StringListProperty
      Name="UndefinePreprocessorDefinitions"
      DisplayName="Undefine Preprocessor Definitions"
      Description="undefine macro (-U[macro])"
      Switch="-U&quot;[value]&quot;" />
    <BoolProperty
      Name="NoIncludeStatement"
      DisplayName="No Include Statement"
      Description="do not generate an #include statement (-i)"
      Switch="-i" />
    <StringProperty
      Name="IncludePathPrefix"
      DisplayName="Include Path Prefix"
      Description="path prefix for included file  (-p[path])"
      Switch="-p&quot;[value]&quot;" />
    <StringListProperty
      Name="ForcedIncludeFiles"
      DisplayName="Forced Include Files"
      Description="force #include, optional file name (-f[file])"
      Switch="-f&quot;[value]&quot;" />
    <BoolProperty
      Name="NoWarnings"
      DisplayName="No Warnings"
      Description="do not display warnings (-nw)"
      Switch="-nw" />
    <StringProperty
      Name="CommandLineTemplate"
      DisplayName="Command Line"
      Visible="False"
      IncludeInCommandLine="False" />
    <StringProperty
      Subtype="AdditionalOptions"
      Name="AdditionalOptions"
      Category="Command Line"
      DisplayName="Additional Options"
      Description="Additional Options" />
    <StringProperty
      Name="ExecutionDescription"
      DisplayName="Execution Description"
      IncludeInCommandLine="False"
      Visible="False" />
  </Rule>

  <Rule Name="QtQrcIncludeOptions" PageTemplate="generic" DisplayName="Qt Qrc Include" Order="303">
    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="QtQrcInclude" />
    </Rule.DataSource>

    <StringProperty
                Name="Lang"
                DisplayName="Language"
                Description="The language of resource."
                Category="General">
    </StringProperty>

    <StringProperty
                Name="Prefix"
                DisplayName="Prefix"
                Description="The prefix of resource."
                Category="General">
    </StringProperty>

    <StringProperty
                Name="Alias"
                DisplayName="Alias"
                Description="The alias of resource."
                Category="General">
    </StringProperty>

    <StringProperty Subtype="folder"
                Name="BasePath"
                DisplayName="BasePath"
                Description="The base path of resource."
                Category="General">
    </StringProperty>
  </Rule>

  <ItemType Name="QtQrc" DisplayName="Qt Qrc" />
  <ContentType Name="QtQrcFile" DisplayName="Qt UI file" ItemType="QtQrc" />
  <FileExtension Name=".qrc" ContentType="QtQrcFile" />

  <Rule Name="QtMocClCompile" DisplayName="Qt Moc Source" PageTemplate="generic" Order="304" xmlns="http://schemas.microsoft.com/build/2009/properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true"/>
    </Rule.DataSource>

    <BoolProperty Name="QtMoc" DisplayName="Enable" Description="Enable Qt Moc" Category="General" />
    <StringProperty Subtype="file" Name="QtMocFileName" DisplayName="Moc File Name" Description="Specifies a name to override default moc file name" Category="General" />
  </Rule>

  <Rule Name="QtMocClInclude" DisplayName="Qt Moc Header" PageTemplate="generic" Order="305" xmlns="http://schemas.microsoft.com/build/2009/properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Rule.Categories>
      <Category Name="General" DisplayName="General" />
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClInclude" Label="" HasConfigurationCondition="true"/>
    </Rule.DataSource>

    <BoolProperty Name="QtMoc" DisplayName="Enable" Description="Enable Qt Moc" Category="General" />
    <BoolProperty Name="QtMocAutoBuild" DisplayName="Auto Build Moc File" Description="Auto Build Moc File" Category="General" />
    <StringProperty Subtype="file" Name="QtMocFileName" DisplayName="Moc File Name" Description="Specifies a name to override default moc file name" Category="General" />
  </Rule>

</ProjectSchemaDefinitions>
